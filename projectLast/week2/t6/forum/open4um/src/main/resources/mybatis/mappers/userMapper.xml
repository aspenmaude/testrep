<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.userMapper">

	<resultMap type="userVO" id="userResult">
		<result property="userid" column="userid"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="phone" column="phone"/>
		<result property="email" column="email"/>
		<result property="roleaccount_id" column="roleaccount_id"/>
		<result property="status" column="status"/>
		<result property="fbid" column="fbid"/>
		<result property="avatar" column="avatar"/>
		<result property="token" column="token"/>
		<result property="money" column="money"/>
	</resultMap>
	
	
	<!-- sql statement -->
	<select id="selectAll" resultMap="userResult">
		<![CDATA[
			select * from user order by userid
		]]>
	</select>
	
	<select id="selectOne" resultMap="userResult" parameterType="int">
		<![CDATA[
			select * from user where userid = #{id}
		]]>
	</select>
	
	<insert id="insert" parameterType="userVO">
	<![CDATA[
	insert into user(username,password,phone,email,roleaccount_id,status,fbid,avatar,token,money)
	values(#{username},#{password},#{phone},#{email},#{roleaccount_id},#{status},#{fbid},#{avatar},#{token},#{money})
	]]>
	</insert>
	
	<insert id="insertUser" parameterType="userVO">
	<![CDATA[
	insert into user(username,password,phone,email,roleaccount_id)
	values(#{username},#{password},#{phone},#{email},#{roleaccount_id})
	]]>
	</insert>
	
	
	<update id="update" parameterType="userVO">
	<![CDATA[
		update user set
			username=#{username},
			password=#{password},
			phone=#{phone},
			email=#{email},
			roleaccount_id=#{roleaccount_id},
			status=#{status},
			fbid=#{fbid},
			avatar=#{avatar},
			token=#{token},
			money=#{money},
		where userid = #{userid}
	]]>
	</update>
	
	
	<delete id="delete" parameterType="int">
	<![CDATA[
		detele from user 
		where userid = #{userid}
	]]>
	</delete>
	
</mapper>