<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.bookMapper">
	<resultMap type="bookVO" id="bookResult">
		<result property="bkid" column="bkid" />
		<result property="bkname" column="bkname" />
		<result property="bkemail" column="bkemail" />
		<result property="bkphone" column="bkphone" />
		<result property="bktime" column="bktime" />
		<result property="bknum" column="bknum" />
		<result property="booking" column="booking" />
		<result property="bkmemo" column="bkmemo" />

	</resultMap>

	<!-- Make SQL statement -->
	<select id="selectAll" resultMap="bookResult">  				<!-- mappers.bookMappers.selectAll -->
			<![CDATA[
				select * from book order by bktime desc
			]]>

	</select>

	<select id="selectOne" resultMap="bookResult" parameterMap="int">
			<![CDATA[
				select * from book
				where bkid = #{id}
			]]>
	</select>

	<insert id="insert" parameterType="int">
			<![CDATA[
				insert into book
				(bkname,bkemail,bkphone,bktime,bknum,booking,bkmemo)
				values
				(#{bkname},#{bkemail},#{bkphone},#{bktime},#{bknum},#{booking},#{bkmemo})
			]]>
	</insert>
	<update id="update" parameterType="bookVO">
			<![CDATA[
				update book set
				bkname = #{bkname},
				bkemail = #{bkemail},
				bkphone = #{bkphone},
				bktime = #{bktime},
				bknum = #{bknum},
				booking = #{booking},
				bkmemo = #{bkmemo},
				where bkid = #{bkid} 

			]]>
	</update>
	<delete id="delete" parameterType="id">
		<![CDATA[
				delete * from book where bkid = #{bkid}

			]]>
	</delete>
</mapper>
	